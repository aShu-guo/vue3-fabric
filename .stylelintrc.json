{
  "root": true,
  "plugins": ["stylelint-order"],
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "customSyntax": "postcss-html",
  "ignoreFiles": ["**/*.js", "**/*.jsx", "**/*.tsx", "**/*.ts"],
  "overrides": [
    {
      "files": ["*.vue", "**/*.vue", "*.html", "**/*.html"],
      "extends": ["stylelint-config-recommended"]
    }
  ]
}
